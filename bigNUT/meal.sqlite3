SELECT *
FROM   shopview;

SELECT plan_name
       || ':  '
       || cm_string
       || '  $'
       || Cast(Cast(100.0 * cost AS INT) / 100 AS TEXT)
       || '.'
       || Substr(Cast(100.0 * cost AS INT) % 100 + 100, 2, 2)
FROM   eating_plan,
       cm_string,
       food_cost_cm;

SELECT *
FROM   currentmeal;

